on gcloud:
cd Vacancy-Suggestion
cd Vacancy-web
git clone https://github.com/IlarionHalushka/Vacancy-Suggestion.git
git pull origin master
export USER=
export PASSWORD=]
export NODE_ENV=production
npm install
npm run build   // only for back-end
gcloud app deploy
gcloud app logs tail -s default